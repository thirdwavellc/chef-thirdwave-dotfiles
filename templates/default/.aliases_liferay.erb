# Liferay Shortcuts
alias lrhome='cd <%= "#{node['liferay']['install_directory']}/liferay" %>'

alias lrtail='sudo tail -f <%= "#{node['liferay']['install_directory']}/liferay/tomcat/logs" %>/catalina.out'

alias lrstart='sudo /etc/init.d/liferay start'

alias lrstop='sudo /etc/init.d/liferay stop'

alias lrclear='sudo rm <%= "#{node['liferay']['install_directory']}/liferay/tomcat/logs" %>/*'

alias lrps='sudo ps aux | grep java'

alias lrdeploy='sudo cp /vagrant/dist/* <%= "#{node['liferay']['install_directory']}/liferay" %>/deploy/. && chown <%= "#{node['liferay']['user']}" %>:<%= "#{node['liferay']['group']}" %> <%= "#{node['liferay']['install_directory']}/liferay" %>/deploy/*'
